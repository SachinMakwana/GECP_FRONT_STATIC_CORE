    <style>
        /* Overlay */
        .popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            z-index: 99998; /* Very high Z-index */
        }

        /* Popup Box */
        .popup-box {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 85%;
            height: 90%;
            background: #fff;
            z-index: 99999; /* Higher than overlay */
            padding: 5px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.5);
        }

        /* Close Button */
        .popup-close {
            position: absolute;
            top: -15px;
            right: -15px;
            background: #ff0000;
            color: white;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            text-align: center;
            line-height: 32px;
            cursor: pointer;
            font-weight: bold;
            font-family: sans-serif;
            box-shadow: 0 2px 5px rgba(0,0,0,0.3);
            z-index: 100000;
        }

        /* PDF Container */
        #globalPdfReader {
            width: 100%;
            height: 100%;
        }
    </style>

    <script src="@Url.Content("~/js/pdfobject/pdfobject.min.js")"></script>

    <script>
        // Define functions globally so the Navbar can access them
        function openPdfPopup(pdfPath) {
            if (!pdfPath) { alert("No file path provided"); return; }

            // Show UI
            jQuery('#globalPdfOverlay').fadeIn(200);
            jQuery('#globalPdfPopup').fadeIn(200);

            // Load PDF
            if (typeof PDFObject !== 'undefined') {
                PDFObject.embed(pdfPath, "#globalPdfReader");
            } else {
                // Fallback
                jQuery("#globalPdfReader").html('<iframe src="' + pdfPath + '" style="width:100%; height:100%; border:none;"></iframe>');
            }
        }

        function closePdfPopup() {
            jQuery('#globalPdfPopup').fadeOut(200);
            jQuery('#globalPdfOverlay').fadeOut(200);
            jQuery('#globalPdfReader').empty(); // Stop memory usage/audio
        }

        // Close on overlay click
        jQuery(document).ready(function($) {
            $('#globalPdfOverlay').on('click', function() {
                closePdfPopup();
            });
        });
    </script>
