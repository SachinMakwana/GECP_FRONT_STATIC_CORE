<div class="top_nav">
	<div class="full-container">

		<div class="left hidden-xs">

			<a href="mailto:@Model.ContactEmail"><i class="fa fa-envelope"></i>&nbsp; @Model.ContactEmail</a> <i class="fa fa-phone-square"></i>&nbsp; @Model.ContactNo

		</div><!-- end left -->

		<div class="right gecp_social_right">
            @foreach (var subChild in Model.MenuVMs.OrderByDescending(m=>m.position).ToList())
            {
                @if (subChild.dynamicID != null)
                {
                    <a href="@Url.Action(subChild.ActionName, subChild.ControllerName, new { id = subChild.dynamicID })" class="tpbut">
                        @subChild.MenuText
                    </a>
                }
                else if (!string.IsNullOrWhiteSpace(subChild.Link))
                {
                    <a href="@subChild.Link" target="_blank" class="tpbut">
                        @subChild.MenuText
                    </a>
                }
                else
                {
                    <a href="@Url.Action(subChild.ActionName, subChild.ControllerName)" class="tpbut">
                        @subChild.MenuText
                    </a>
                }
			}
		</div>

	</div>
</div><!-- end top navigation links -->
<div class="clearfix margin_top1"></div>
<div class="full-container hidden-xs">
	<div class="logo_section">
		<div class="gecp_logo">
