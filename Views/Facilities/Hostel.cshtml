@model Hostel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.Title;
    int count = 1;
}

<div class="clearfix"></div>


<div class="page_title3 @Model.TitleImageCSSClass" style="background: #999 url(@Model.TitleImage) no-repeat center top;background-size: cover;">
    <div class="container">

        <h1>
            @Model.Title <em>Government Engineering College</em>
            <div class="line"></div>
        </h1>

    </div>
</div>
<div class="clearfix"></div>


<div class="content_fullwidth">
    <div class="featured_section55 animate" data-anim-type="fadeIn" data-anim-delay="100">
        <div class="container">

            <div class="one_half">

                <img src="@Url.Content(Model.SideImage)" alt="" class="rimg">

            </div>
            <!-- end section -->

            <div class="one_half last">

                <h3>About Hostel</h3>
                <p style="text-align:justify; width:100%">
                    @Model.About
                </p>
                <div class="margin_bottom1">
                </div>

                <table class="table table-striped table-bordered table-hover">

                    <tr>
                        <th>
                            Hostel
                        </th>
                        <th>
                            Boys
                        </th>
                        <th>
                            Girls
                        </th>
                    </tr>
                    <tr>
                        <td style="text-align:left;">Number of Rooms</td>
                        <td style="text-align:right;">@Model.Factors.Rooms</td>
                        <td style="text-align:right;">@Model.Factors.Rooms</td>
                    </tr>
                    <tr>
                        <td style="text-align:left;">Capacity</td>
                        <td style="text-align:right;">@Model.Factors.Capacity</td>
                        <td style="text-align:right;">@Model.Factors.Capacity</td>
                    </tr>
                    <tr>
                        <td style="text-align:left;">Mess</td>
                        <td style="text-align:right;">@Model.Factors.Mess</td>
                        <td style="text-align:right;">@Model.Factors.Mess</td>
                    </tr>
                    <tr>
                        <td style="text-align:left;">T.T. Hall</td>
                        <td style="text-align:right;">@Model.Factors.TTHall</td>
                        <td style="text-align:right;">@Model.Factors.TTHall</td>
                    </tr>
                    <tr>
                        <td style="text-align:left;">Community Hall</td>
                        <td style="text-align:right;">@Model.Factors.Hall</td>
                        <td style="text-align:right;">@Model.Factors.Hall</td>
                    </tr>
                </table>
                @*<p>Discover the undoubtable source Ipsum comes from sections.</p>*@

            </div>

    </div>
    </div>
</div>
<div class="margin_top2"></div>

<!-- end featured section 55 -->
@if (!string.IsNullOrWhiteSpace(Model.BlogLink))
{
    <div class="arrowdown_box">
        <div class="full-container">

            <h2 class="white">
                <p>Link For Blogspot:</p>
                <p><a href="@Model.BlogLink">@Model.BlogLink</a></p>
            </h2>

        </div>
    </div>
    <div class="clearfix"></div>
}
