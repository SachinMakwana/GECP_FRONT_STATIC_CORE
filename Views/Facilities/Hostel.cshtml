@model Hostel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.Title;
    int count = 1;
}

<div class="page_title3 @Model.TitleImageCSSClass" style="background: #999 url(@Model.TitleImage) no-repeat center top; background-size: cover;">
    <div class="full-container">
        <h1>
            @Model.Title
            <div class="line"></div>
        </h1>
    </div>
</div>
<div class="clearfix"></div>
<div class="margin_top10"></div>
<div class="full-container">
<div class="tab hidden-xs">
		<button class="tablinks" onclick="openTab(event, 'About')" id="defaultOpen">About</button>
		@if (Model.Vision?.Count > 0 || Model.Mission?.Count > 0)
		{
			<button class="tablinks" onclick="openTab(event, 'VisionMission')">Vision & Mission</button>
		}
        @if (Model.Members?.Count > 0)
        {
               <button class="tablinks" onclick="openTab(event, 'Members')">Members</button>
        }
</div>
<div class="tab-xs visible-xs">
	<button class="tablinks" onclick="openTab(event, 'About')" id="defaultOpen">About</button>
	@if (Model.Vision?.Count > 0 || Model.Mission?.Count > 0)
	{
		<button class="tablinks" onclick="openTab(event, 'VisionMission')">Vision & Mission</button>
	}
	@if (Model.Members?.Count > 0)
	{
		<button class="tablinks" onclick="openTab(event, 'Members')">Members</button>
	}
</div>
	<!-- ABOUT TAB -->
	<div id="About" class="tabcontent">
		<div class="featured_section55 animate" data-anim-type="fadeIn" data-anim-delay="100">
			<div class="full-container">
				<div class="center-block">
					<div class="onecol_forty_less">
						<div id="owl-demo2" class="owl-carousel center-block hidden-on-load">
							 @foreach (var imagePath in Model.SideImage)
							{
								<div><img src="@Url.Content(imagePath)" alt="" class="rimg"></div>
							} 
							@* <div class="one_half">

								<img src="@Url.Content(Model.SideImage)" alt="" class="rimg">

							</div> *@
						</div>
						@* <img src="@Url.Content(Model.Measure_Image)" alt="" class="rimg" style="height:250px" /> *@
						@* <img src="@Url.Content(Model.Measure_Image)" alt="" class="center-block" /> *@
					</div>
				</div>
				<div class="clearfix margin_top1"></div>
				<div class="text-justify">

					<h4 class="color3 margin_bottom2">About @Model.Title</h4>
					<p class="bigtfont text-justify overflowCommittes">
						@Html.Raw(Model.About)
					</p>
					@* <table class="table table-striped table-bordered table-hover">
						<tr>
							<th>Hostel</th>
							<th>Boys</th>
							<th>Girls</th>
						</tr>
						<tr>
							<td style="text-align:left;">Number of Rooms</td>
							<td style="text-align:right;">@Model.Factors.Rooms</td>
							<td style="text-align:right;">@Model.Factors.Rooms</td>
						</tr>
						<tr>
							<td style="text-align:left;">Capacity</td>
							<td style="text-align:right;">@Model.Factors.Capacity</td>
							<td style="text-align:right;">@Model.Factors.Capacity</td>
						</tr>
						<tr>
							<td style="text-align:left;">Mess</td>
							<td style="text-align:right;">@Model.Factors.Mess</td>
							<td style="text-align:right;">@Model.Factors.Mess</td>
						</tr>
						<tr>
							<td style="text-align:left;">T.T. Hall</td>
							<td style="text-align:right;">@Model.Factors.TTHall</td>
							<td style="text-align:right;">@Model.Factors.TTHall</td>
						</tr>
						<tr>
							<td style="text-align:left;">Community Hall</td>
							<td style="text-align:right;">@Model.Factors.Hall</td>
							<td style="text-align:right;">@Model.Factors.Hall</td>
						</tr>
					</table> *@
					<table class="table table-striped table-bordered table-hover">
						<tr>
							<th>Hostel</th>
							<th>Boys</th>
							<th>Girls</th>
						</tr>

						@foreach (var factor in Model.Factors)
						{
							<tr>
								<td style="text-align:left;">@factor.Key</td>
								<td style="text-align:right;">@factor.Value</td>
								<td style="text-align:right;">@factor.Value</td>
							</tr>
						}
					</table>

					<div class="clearfix margin_top3"></div>
				</div>
				<!-- end section -->
			</div>
		</div>
	</div>
	<!-- VISION & MISSION -->
	<div id="VisionMission" class="tabcontent">
		<div class="featured_section106" style="background-color:white">
			<div style="padding-left:10px;">

				<div class="margin_top2"></div>
				<h2 class="roboto thin">Vision </h2>
				<div class="hsmline7"></div>

				<br><br>
				@foreach (var obj in Model.Vision)
				{
					<h4 class="roboto thin text-justify"> @obj</h4>
				}

				<div class="clearfix margin_top2"></div>

				<div class="margin_top2"></div>
				<h2 class="roboto thin">Mission </h2>
				<div class="hsmline7"></div>

				<br><br>
				@foreach (var obj in Model.Mission)
				{
					<h4 class="roboto thin text-justify"><i class="fa fa-check"></i> @Html.Raw(obj)</h4>
				}

				<div class="margin_top2"></div>

			</div>
		</div>
	</div>

	<!-- MEMBERS TAB -->
	<div id="Members" class="tabcontent">
		<div class="featured_section30">
			<div class="full-container">
				<h1 class="title22 animate" data-anim-type="fadeIn" data-anim-delay="100" style="color: black !important;">
					Committee Members
				</h1>
				@foreach (var item in Model.Members)
				{

					<div class="one_half animate @(count % 2 == 0 ? "last" : "")" data-anim-type="fadeIn" data-anim-delay="400">

						<img src="@Url.Content(item.Image)" alt="" style="margin-right:15px;">
						<h5>@item.Name <em>@item.Position</em></h5>
						<text>@item.Department</text>
						<text>@item.Email</text>

					</div>

					<!-- end section -->
					<div class="@(count % 2 == 0 ? "clearfix margin_top5" : "")"></div>
					count++;
				}
			</div>
		</div>
	</div>
</div>
@if (!string.IsNullOrWhiteSpace(Model.Tagline))
{
	<div class="featured_section38">
		<div class="full-container">
			@Html.Raw(Model.Tagline)
		</div>
	</div>
}
