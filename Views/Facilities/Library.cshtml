@model Library
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Library";
	int count = 0;
}


<div class="clearfix"></div>


<div class="page_title3 @Model.TitleImageCSSClass" style="background: #999 url(@Model.Titleimage) no-repeat center top;background-size: cover;">
	<div class="container">

		<h1>
			@Model.Title 
			<div class="line"></div>
		</h1>

	</div>
</div>
<div class="clearfix margin_bottom6"></div>
<!-- end page title -->

<div class="content_fullwidth">



	<div class="featured_section69 text-justify">
		<div class="container">

			<div class="one_half">

				<h2 class="roboto caps">Welcome to GECP Library.</h2>
				<div class="hsmline6"></div>
				<br />
				<p class="bigtfont gray">@Model.Content</p>

			</div>
			<!-- end section -->

			<div class="one_half last">
				<div class="clearfix margin_top5"></div>
				<div class="box animate" data-anim-type="fadeInUp" data-anim-delay="100" style="min-height:190px;min-width:190px">
					<a href="@Model.Books_Hyperlink" target="_blank">
						<h4 class="roboto">Access</h4>
						<i class="fa fa-book"></i>
						<h4 class="roboto">@Model.Books</h4>
					</a>
				</div>

				<div class="box two animate" data-anim-type="fadeInUp" data-anim-delay="150" style="min-height:190px;min-width:190px">
					<a href="@Model.ONOS_LINK" target="_blank">
						<img src="@Url.Content(Model.ONOS_IMG)" class="rimg" />
						@* <h4 class="roboto">@Model.Periodicals</h4> *@
					</a>
				</div>

				@* 	<div class="box three animate" data-anim-type="fadeInUp" data-anim-delay="200">
					<i class="fa fa-bookmark"></i>
					<h4 class="roboto">@Model.Reports</h4>
					
				</div>

				<div class="box four animate" data-anim-type="fadeInUp" data-anim-delay="250">
					<i class="fa fa-user"></i>
					<h4 class="roboto">@Model.Biography</h4>
				</div> *@
				<!-- end box -->

			</div>
			<!-- end section -->

		</div>
	</div>
	<!-- end featured section 69 -->
	<!-- end all sections -->

	<div class="margin_top2"></div>

	<div class="featured_section14">
		<div class="container">


			<div class="one_half animate" data-anim-type="fadeInLeft" data-anim-delay="300">

				<img src="@Url.Content("~/images/vision.png")" alt="" />
				<br /><br />
				<h3 class="white">Vision</h3>

				<ul class="text-justify">
					@foreach (var item in Model.Vision)
					{
						<li><i class="fa fa fa-hand-o-right" aria-hidden="true"></i> @item</li>
					}
				</ul>
				<br /><br />


			</div>
			<!-- end section -->


			<div class="one_half last animate" data-anim-type="fadeInRight" data-anim-delay="300">

				<img src="@Url.Content("~/images/mission.png")" alt="" />
				<br /><br />
				<h3 class="white">Mission</h3>

				<ul class="text-justify">
					@foreach (var item in Model.Mission)
					{
						<li><i class="fa fa fa-hand-o-right" aria-hidden="true"></i> @item</li>
					}
				</ul>
				<br /><br />


			</div>
			<!-- end section -->

		</div>
	</div>
	<!-- end featured section 14 -->


</div>
<div class="clearfix margin_bottom6"></div>
<div class="featured_section30">
	<div class="container">
		<h1 class="title22 animate" data-anim-type="fadeIn" data-anim-delay="100" style="color: black !important;">
			Committee Members
		</h1>

		<!-- end section -->
		@foreach (var member in Model.Members)
		{
			@if (count % 2 == 0)
			{
				<div class="clearfix margin_top5"></div>

				<div class="one_half animate" data-anim-type="fadeIn" data-anim-delay="400">

					<img src="@Url.Content(member.Image)" alt="">
					<h5>@member.Name<em>@member.Position</em></h5>
					<p>@member.Department</p>
					<p>@member.Email</p>
				</div>
			}
			else

			{
				<div class="one_half last animate" data-anim-type="fadeIn" data-anim-delay="400">
					<img src="@Url.Content(member.Image)" alt="">
					<h5>@member.Name<em>@member.Position</em></h5>
					<p>@member.Department</p>
					<p>@member.Email</p>

				</div>
			}
			count++;
		}
	</div>
</div>
<div class="clearfix margin_bottom6"></div>


<div class="clearfix"></div>

<div class="content_fullwidth" style="padding: 0 !important">
	<img src="@Url.Content("~/images/Library/lib.jpg")" alt="" class="rimg" />
</div>
<div class="clearfix" style="background: #5076bb !important"></div>

<div class="featured_section38">
	<div class="container">

		@Html.Raw(Model.TagLine)

	</div>
</div>


