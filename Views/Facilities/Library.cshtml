@model Library
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.Title;
    int count = 1;
    int srno = 1;
}
<div class="page_title3 @Model.TitleImageCSSClass" style="background: #999 url(@Model.TitleImage) no-repeat center top; background-size: cover;">
    <div class="full-container">
        <h1>
            @Model.Title
            <div class="line"></div>
        </h1>
    </div>
</div>
<div class="clearfix"></div>
<div class="margin_top10"></div>
<div class="full-container">
    <div class="tab hidden-xs">
        <button class="tablinks" onclick="openTab(event, 'About')" id="defaultOpen">About</button>
        @if (Model.Vision?.Count > 0 || Model.Mission?.Count > 0)
        {
            <button class="tablinks" onclick="openTab(event, 'VisionMission')">Vision & Mission</button>
        }
        @if (Model.Resources?.Count > 0)
        {
            <button class="tablinks" onclick="openTab(event, 'Resources')">Resources</button>
        }
        @if (Model.Members?.Count > 0 )
        {
            <button class="tablinks" onclick="openTab(event, 'Members')">Members</button>
        }
    </div>
    <div class="tab-xs visible-xs">
        <button class="tablinks" onclick="openTab(event, 'About')" id="defaultOpen">About</button>
        @if (Model.Vision?.Count > 0 || Model.Mission?.Count > 0)
        {
            <button class="tablinks" onclick="openTab(event, 'VisionMission')">Vision & Mission</button>
        }
        @if (Model.Resources?.Count > 0)
        {
            <button class="tablinks" onclick="openTab(event, 'Resources')">Resources</button>
        }
        @if (Model.Members?.Count > 0)
        {
            <button class="tablinks" onclick="openTab(event, 'Members')">Members</button>
        }
    </div>
    <!-- ABOUT TAB -->
    <div id="About" class="tabcontent">
        <div class="featured_section55 animate" data-anim-type="fadeIn" data-anim-delay="100">
            <div class="full-container">
                <div class="center-block">

                    <div id="owl-demo2" class="owl-carousel center-block hidden-on-load" style="width:50%">
                        @foreach (var imagePath in Model.Images)
                        {
                            <div><img src="@Url.Content(imagePath)" alt="" class="rimg"></div>
                        }
                    </div>
                    @* <img src="@Url.Content(Model.Measure_Image)" alt="" class="rimg" style="height:250px" /> *@
                    @* <img src="@Url.Content(Model.Measure_Image)" alt="" class="center-block" /> *@

                </div>
                <div class="clearfix margin_top1"></div>
                <div class="text-justify">

                    <h4 class="color3 margin_bottom2">About @Model.Title</h4>
                    <p class="bigtfont text-justify overflowCommittes">
                        @Html.Raw(Model.Content)
                    </p>
                    <div class="clearfix margin_top3"></div>
                </div>
                <!-- end section -->
            </div>
        </div>
    </div>

    <!-- VISION & MISSION -->
    <div id="VisionMission" class="tabcontent">
        <div class="featured_section106" style="background-color:white">
            <div style="padding-left:10px;">

                <div class="margin_top2"></div>
                <h2 class="roboto thin">Vision </h2>
                <div class="hsmline7"></div>

                <br><br>
                @foreach (var obj in Model.Vision)
                {
                    <h4 class="roboto thin text-justify"> @obj</h4>
                }

                <div class="clearfix margin_top2"></div>

                <div class="margin_top2"></div>
                <h2 class="roboto thin">Mission </h2>
                <div class="hsmline7"></div>

                <br><br>
                @foreach (var obj in Model.Mission)
                {
                    <h4 class="roboto thin text-justify"><i class="fa fa-check"></i> @Html.Raw(obj)</h4>
                }

                <div class="margin_top2"></div>

            </div>
        </div>
    </div>
    <!--Resouces -->
    @* <div id="Resources" class="tabcontent">
        <div class="container">
            <div class="row">
                @foreach (var resource in Model.Resources)
                {
                    <div class="col-md-3 col-sm-6 mb-4">
                        <a href="@resource.Hyperlink" target="_blank" class="text-decoration-none">
                            <div class="card text-center h-100 shadow-sm">
                                <div class="card-body">
                                    <img src="@Url.Content(resource.Image)" class="img-fluid mb-3" style="height:80px;" alt="@resource.Name" />
                                    <h5 class="card-title">@resource.Name</h5>
                                    @if (!string.IsNullOrEmpty(resource.Count))
                                    {
                                        <p class="card-text">@resource.Count</p>
                                    }
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div> *@
    <div id="Resources" class="tabcontent">
        @if (Model.TableView)
        {
            <!-- Table View -->
            <div class="featured_section106">
                <div class="full-container table-responsive">
                    <div class="margin_top2"></div>
                    <h2 class="roboto thin">Resources</h2>
                    <div class="hsmline7"></div>
                    <br><br>

                    @if (Model.Resources != null && Model.Resources.Any())
                    {
                        <table class="table table-bordered table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 80px;">Sr. No</th>
                                    <th style="width: 250px;">Resource Name</th>
                                    <th>Image</th>
                                    <th>Link</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var resource in Model.Resources)
                                {
                                    <tr>
                                        <td class="text-center">@srno</td>
                                        <td class="text-center">@resource.Name</td>
                                        <td class="text-center">
                                            <img src="@Url.Content(resource.Image)"
                                                 alt="@resource.Name Image"
                                                 style="max-height: 80px; object-fit: contain;" />
                                        </td>
                                        <td class="text-center ">
                                            <a href="@resource.Hyperlink" target="_blank" style="color:deepskyblue">View</a>
                                        </td>
                                    </tr>
                                    srno++;
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No resources data available.</p>
                    }

                    <div class="margin_top2"></div>
                </div>
            </div>
        }
        else
        {
            <!-- Grid View -->
            <div class="container">
                <div class="margin_top2"></div>
                <h2 class="roboto thin">Resources</h2>
                <div class="hsmline7"></div>
                <br><br>

                <div class="row g-4 justify-content-center">
                    @foreach (var item in Model.Resources)
                    {
                        <div class="one_third box animate box-min-height fadeInUp @(srno % 3 == 0 ? "last" : "")" data-anim-type="fadeInUp" data-anim-delay="100">
                            <a href="@item.Hyperlink" target="_blank">
                                <img src="@Url.Content(item.Image)" class="rimg" style="max-height:150px;  height:230px;">
                            </a>
                        </div>
                        @if (srno % 3 == 0)
                        {
                            <div class="clearfix margin_bottom2"></div>
                        }
                        srno++;
                    }
                </div>
            </div>
        }
    </div>


    <!-- MEMBERS TAB -->
    <div id="Members" class="tabcontent">
        <div class="featured_section30">
            <div class="full-container">
                <h1 class="title22 animate" data-anim-type="fadeIn" data-anim-delay="100" style="color: black !important;">
                    Committee Members
                </h1>
                @foreach (var item in Model.Members)
                {

                    <div class="one_half animate @(count % 2 == 0 ? "last" : "")" data-anim-type="fadeIn" data-anim-delay="400">

                        <img src="@Url.Content(item.Image)" alt="" style="margin-right:15px;">
                        <h5>@item.Name <em>@item.Position</em></h5>
                        <text>@item.Department</text>
                        <text>@item.Email</text>

                    </div>

                    <!-- end section -->
                    <div class="@(count % 2 == 0 ? "clearfix margin_top5" : "")"></div>
                    count++;
                }
            </div>
        </div>
    </div>

</div>

@if (!string.IsNullOrWhiteSpace(Model.Tagline))
{
    <div class="featured_section38">
        <div class="full-container">
            @Html.Raw(Model.Tagline)
        </div>
    </div>
}
