	<div id="Labs" class="tabcontent">
		@if (Model.Labs != null)
		{
			@foreach (var lab in Model.Labs)
			{
				<div class="boxdetail">
					<h2 class="boxtitle">@lab.Lab_Name</h2>
					<div class="one_third">
						<img src="@Url.Content(lab.Lab_Image)" alt="@lab.Lab_Name" />
					</div>
					<div class="two_third last">
						<div class="lab-content">
							<p class="text-justify">
								@if (!string.IsNullOrEmpty(lab.Lab_Details))
								{
									@Html.Raw(lab.Lab_Details)
								}
							</p>
							<ul class="lab-content">
								@foreach (var file in lab.Files)
								{

									<li>
										@if (file.FileType.ToUpper() == "PDF")
										{
											<div class="read-more-container">
												<a href="javascript:void(0)" onclick="loadPdf('@file.FilePath','@file.Title')" class="read-more-button">
													READ MORE Lab Details
												</a>
											</div>
												
										}
										else
										{
											<div class="read-more-container">
												<a href="@Url.Content(file.FilePath)" target="_blank" download class="read-more-button">
													READ MORE Lab Details
												</a>
											</div>
										}
									</li>
