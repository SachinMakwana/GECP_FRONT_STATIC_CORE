@model COE
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "COE";
    int count = 1;
}
<style>
    .height {
        min-height:225px
    }
</style>

<div class="clearfix"></div>


<div class="page_title3 @Model.TitleImageCSSClass" style="background: #999 url(@Model.Titleimage) no-repeat center top;background-size: cover;">
    <div class="container">

        <h1>
            @Model.Title <em>Government Engineering College</em>
            <div class="line"></div>
        </h1>

    </div>
</div>
<div class="clearfix margin_bottom6"></div>
<!-- end page title -->
<div class="content_fullwidth">

    <div class="container">

        <div class="one_half">

            <div id="owl-demo2" class="owl-carousel">

                @*<div><img src="@Url.Content("~/images/college.jpg")" alt="" class="rimg"></div>

                <div><img src="@Url.Content("~/images/college_gate.jpg")" alt="" class="rimg"></div>*@

                <div><img src="@Url.Content(Model.SideImage)" alt="" class="rimg"></div>

            </div>

        </div>
        <!-- end section -->

        <div class="one_half last text-justify">

            <div class="stcode_title5">
                <h3 class="nmb"><strong>About CoE</strong></h3>
            </div>

            <p>
                @Model.About
            </p>

            <div class="clearfix marb12"></div>

        </div>
        <!-- end section -->

    </div>
    <!-- end all sections -->

</div>
<!-- end section -->
<div class="featured_section6">
    <div class="container">

        <h2>Benefits of CoE</h2>
        @foreach (var benefit in Model.Benefits) {

            <div class="one_fourth animate height" data-anim-type="fadeInUp" data-anim-delay="@benefit.Time">

                <i class="@benefit.Icon"></i>
                <h4>@benefit.Text</h4>

            </div><!-- end section -->
            @if (count%4==0)
            {
                <div class="clearfix"></div>
            }
            count++;
        }

    </div>
    @if (Model.Vision.Count() > 0 && Model.Mission.Count()>0)

    {
        <div class="featured_section14">
        <div class="container">

            <div class="one_half animate" data-anim-type="fadeInLeft" data-anim-delay="300">

                <img src="@Url.Content("~/images/vision.png")" alt="" />
                <br /><br />
                <h3 class="white">Vision</h3>

                <ul class="text-justify">
                    @foreach (var item in Model.Vision)
                    {
                        <li><i class="fa fa fa-hand-o-right" aria-hidden="true"></i> @item</li>
                    }
                </ul>
                <br /><br />


            </div>
            <!-- end section -->

            <div class="one_half last animate" data-anim-type="fadeInRight" data-anim-delay="300">

                <img src="@Url.Content("~/images/mission.png")" alt="" />
                <br /><br />
                <h3 class="white">Mission</h3>

                <ul class="text-justify">
                    @foreach (var item in Model.Mission)
                    {
                        <li><i class="fa fa fa-hand-o-right" aria-hidden="true"></i> @item</li>
                    }
                </ul>
                <br /><br />


            </div>
            <!-- end section -->

        </div>
    </div>}
    @if (Model.Members.Count() > 0)
    {
        <div class="clearfix margin_bottom6"></div>
        <div class="featured_section30">
            <div class="container">
                <h1 class="title22 animate" data-anim-type="fadeIn" data-anim-delay="100" style="color: black !important;">
                    Committee Members
                </h1>
                @foreach (var item in Model.Members)
                {
                    if (count % 2 == 0)
                    {
                        <div class="one_half last animate" data-anim-type="fadeIn" data-anim-delay="300" style="border-left:1px solid rgba(255, 255, 255, 0.1)">

                            <img src="@Url.Content(item.Image)" alt="">
                            <h5>@item.Name <em>@item.Position</em></h5>
                            <p>@item.Department</p>
                            <p>@item.Email</p>
                            @*  <br>
                <a href="#" class="button four">Read More</a> *@
                        </div>

                        <!-- end section -->

                        <div class="clearfix margin_top5"></div>
                    }
                    else
                    {
                        <div class="one_half animate" data-anim-type="fadeIn" data-anim-delay="400">

                            <img src="@Url.Content(item.Image)" alt="">
                            <h5>@item.Name <em>@item.Position</em></h5>
                            <p>@item.Department</p>
                            <p>@item.Email</p>
                            @*  <br>
                <a href="#" class="button four">Read More</a> *@
                        </div>

                        <!-- end section -->
                    }
                    count++;
                }
            </div>
        </div>
        <div class="clearfix margin_bottom6"></div>
    }

</div><!-- end featured section 6 -->