@model CommitteeActivity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.Title;
}

<div class="page_title3">
    <div class="container">
        <h1>
            @Model.Title
            <div class="line"></div>
        </h1>
    </div>
</div>
<div class="margin_top10"></div>
<div class="clearfix"></div>

<div class="full-container">
    <div class="blog_post">
        <div class="blog_postcontent">

            <!-- Title -->
            <h2 class="color3 fw-bold mb-2">
                @Model.Title
            </h2>

            <!-- Owl Carousel Main -->
            <div class="owl-carousel owl-theme text-center" id="owl-demo">
                @foreach (var img in Model.Images)
                {
                    <div class="item">
                        <img src="@Url.Content(img)" alt="Event Image img-size" class="img-fluid rounded shadow-sm" />
                    </div>
                }
            </div>

            <!-- Owl Carousel Thumbnails -->
          @*   <div id="sync2" class="owl-carousel owl-theme mb-4">
                @foreach (var img in Model.Images)
                {
                    <div class="item">
                        <img src="@Url.Content(img)" alt="Event Thumbnail" class="img-thumbnail" style="height: 80px; object-fit: cover;" />
                    </div>
                }
            </div> *@
            <div class="clearfix margin_bottom3"></div>
            <!-- Meta Info -->
            <ul class="post_meta_links mb-3 meta-info">
                @if (!string.IsNullOrEmpty(Model.EventDate))
                {
                    <li><strong>Date:</strong> @Model.EventDate</li>
                }
                @if (!string.IsNullOrEmpty(Model.EventTime))
                {
                    <li><strong>Time:</strong> @Model.EventTime</li>
                }
            </ul>

            <div class="clearfix margin_bottom3"></div>
            <!-- Description -->
            <p class="description">
                @Model.Description
            </p>
            
            <div class="clearfix margin_bottom3"></div>
            <!-- Files Section -->
            @if (Model.Files != null && Model.Files.Any())
            {
                <div class="mt-4 pt-3 border-top">
                    <h4 class="color3 fw-semibold mb-3 related-files">
                        Related Files
                    </h4>
                    <ul class="list-unstyled">
                        @foreach (var file in Model.Files)
                        {
                            <li class="mb-2">
                                <a href="@Url.Content(file.FilePath)" target="_blank" class="text-decoration-none text-dark">
                                    <i class="fa fa-file-pdf-o text-danger me-2"></i>
                                    <strong>@file.Title</strong> <span class="text-muted">(@file.FileType)</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>


    <div class="clearfix"></div>
    <div class="margin_bottom4"></div>
    <div class="clearfix"></div>
</div>



@section styles {
    <style>
        .description {
            line-height: 1.7;
            font-size: 1.05rem;
            color: #333;
        }

        .list-unstyled li:first-child {
            border-bottom: 0px solid #3B3B3A;
            margin-bottom: 0px;
        }

        .related-files {
            border-bottom: 2px solid #ccc;
            padding-bottom: 5px;
        }

        .meta-info {
            font-size: 0.95rem;
            color: #555;
            list-style: none;
            padding: 0;
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        #owl-demo .item img {
			width: auto;
			height: 200px;
            padding: 0 5px; 
        }
    </style>
}