@model List<GECP_Front_End_Static.Models.AcademicCal>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Academic Calendar";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* General styling */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        /* Flex container for 70% Google Calendar and 30% additional content */
        .main-container {
            display: flex;
            height: 100vh;
        }

        /* Add margin-top to create space between the menu bar and the calendar */
        .calendar-container {
            width: 70%;
            padding: 20px;
            margin-top: 40px; /* Adjust this value to create the desired space */
            border-right: solid 1px #777;
            box-sizing: border-box;
        }


        /* Style the iframe for Google Calendar */
        iframe {
            width: 100%;
            height: 100%;
            border: solid 1px #777;
        }

        .calendar-container iframe {
            border: none; /* Remove default border */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Adding a shadow */
            border-radius: 10px; /* Rounded corners */
        }

        .calendar-overlay {
            position: absolute;
            top: 20px;
            left: 50px;
            right: 50px;
            height: 50px;
            background-color: rgba(255, 255, 255, 0.8);
            text-align: center;
            z-index: 1;
        }


        /* 30% width for the second part (buttons and student corner) */
        .content-container {
            width: 30%;
            padding: 20px;
            box-sizing: border-box;
        }

        /* Adjust the padding around the calendar */
        .calendar-container {
            width: 70%;
            padding: 40px 20px 20px 20px; /* Added top padding to create a gap */
            border-right: solid 1px #777;
            box-sizing: border-box;
        }

        /* Styling for buttons */
        #button-container {
            margin-bottom: 20px;
        }

        .btn {
            text-decoration: none;
            margin-right: 10px;
        }

        button {
            padding: 10px 20px;
            border: none;
            margin-top: 70px;
            background-color: #007bff;
            color: white;
            cursor: pointer;
            border-radius: 20px;
        }

            button.pillbtn-left {
                border-top-left-radius: 20px;
                border-bottom-left-radius: 20px;
            }

            button.pillbtn-right {
                border-top-right-radius: 20px;
                border-bottom-right-radius: 20px;
            }

        /* Example content styling */
        .student-corner {
            margin-top: 20px;
        }

        .post-content h3 a {
            color: #007bff;
            text-decoration: none;
        }

        .post-content p {
            font-size: 0.9em;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Google Calendar - 70% of the width -->
        <div class="calendar-container">
            <iframe src="https://calendar.google.com/calendar/embed?height=600&wkst=1&ctz=UTC&showPrint=0&title=GEC%20PATAN%20Academic%20Calendar&src=MTg3NDE1NmJhMjk4ZTQxOGExNGUyNTc0ZmEzZTBjYzE0MTIyZjNiMTY0MGY0MDE1OWUwMDlmODVmOWRiNjIxOEBncm91cC5jYWxlbmRhci5nb29nbGUuY29t&src=ZW4uaW5kaWFuI2hvbGlkYXlAZ3JvdXAudi5jYWxlbmRhci5nb29nbGUuY29t&color=%23AD1457&color=%230B8043" style="border:solid 1px #777" width="800" height="600" frameborder="0" scrolling="no"></iframe>

        </div>

        <!-- Second part - 30% of the width -->
        <div class="content-container">
            <div id="button-container">
                <a class="btn" href="javascript:void(0)" target="">
                    <button class="pillbtn pillbtn-left btn-active" type="button" id="btn-corner">Academic Calendar</button>
                </a>
            </div>

            

                <div class="student-corner" id="student-corner">
                    <div class="most-popular-post">
                        <div class="row align-items-center">
                            <div class="col-lg-12 col-sm-12">
                                @foreach (var item in Model)
                                {
                                    <div class="post-content">
                                        <span class="ti-arrow-circle-right"></span>
                                        <h3>
                                            <a href="@item.File" target="_blank">
                                                @item.Title
                                            </a>
                                        </h3>
                                        <p>@DateTime.Now.ToString("dd-MMM-yyyy")</p> <!-- Update the date as necessary -->
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

        </div>
    </div>

 
</body>
</html>
