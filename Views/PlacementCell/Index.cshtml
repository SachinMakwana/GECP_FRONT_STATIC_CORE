                                    <td style="padding:10px; border:1px solid #aaa;">@activity.ActivityName</td>
                                    <td style="padding:10px; border:1px solid #aaa;">@activity.Period</td>
                                    <td style="padding:10px; border:1px solid #aaa;">@activity.TargetStudents</td>
                                    <td style="padding:10px; border:1px solid #aaa;">
                                        @if (!string.IsNullOrEmpty(activity.ReportLink))
                                        {
                                            <a href="@Url.Content(activity.ReportLink)" target="_blank" style="color:deepskyblue; text-decoration: none;">
                                                Click Here
                                            </a>
                                        }
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
  
    @if (Model.StudentPolicy != null)
    {
        <div id="StudentPlacementPolicy" class="tabcontent">
            <div class="featured_section106">
                <div class="full-container">
                    <div class="margin_top2"></div>
                    <h2 class="roboto thin">Student Placement Policy</h2>
                    <div class="hsmline7"></div>
                    <br />

                    <!-- General Policy -->
                    @if (Model.StudentPolicy.PolicyText?.Any() == true)
