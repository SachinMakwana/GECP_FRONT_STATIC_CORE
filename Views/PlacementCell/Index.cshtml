@model GECP_Front_End_Static.Models.PlacementCellContent

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.Title;
    int count = 1;
}

<div class="page_title3 @Model.TitleImageCSSClass" style="background: #999 url(@Model.TitleImage) no-repeat center top; background-size: cover;">
    <div class="full-container">
        <h1>
            @Model.Title
            <div class="line"></div>
        </h1>
    </div>
</div>

<div class="clearfix"></div>
<div class="margin_top10"></div>

<div class="full-container">
    <div class="tab hidden-xs">
        <button class="tablinks" onclick="openTab(event, 'About')" id="defaultOpen">About</button>
        @if (Model.Vision?.Count > 0 || Model.Mission?.Count > 0)
        {
            <button class="tablinks" onclick="openTab(event, 'VisionMission')">Vision & Mission</button>
        }
        @if (Model.Objectives?.Count > 0)
        {
            <button class="tablinks" onclick="openTab(event, 'Objectives')">Objectives</button>
        }
        @if (Model.Functions != null)
        {
            <button class="tablinks" onclick="openTab(event, 'Functions')">Functions</button>
        }
        @if (Model.Statistics?.Count > 0)
        {
            <button class="tablinks" onclick="openTab(event, 'Statistics')">Placement Statistics</button>
        }
        @if (Model.TopRecruiters?.Count > 0)
        {
            <button class="tablinks" onclick="openTab(event, 'TopRecruiters')">TOP Recruiters</button>
        }
        @if (Model.ActivitiesCalendar?.Count > 0)
        {
            <button class="tablinks" onclick="openTab(event, 'ActivitiesCalendar')">Activities Calendar & Reports</button>
        }
        @if (Model.StudentPolicy != null)
        {
            <button class="tablinks" onclick="openTab(event, 'StudentPlacementPolicy')">For Student</button>
        }
        @if (Model.RecruiterDetails != null)
        {
            <button class="tablinks" onclick="openTab(event, 'RecruiterInfo')">For Recruiters</button>
        }
        @if (Model.SuccessStoriesNote != null)
        {
            <a href="@Url.Content(@Model.SuccessStoriesNote)" target="_blank" class="tablinks">
                <button class="tablinks">
                    Success Stories
                </button>
            </a>
        }
        @if (Model.Team?.Count > 0)
        {
            <button class="tablinks" onclick="openTab(event, 'Contact')">Contact Us</button>
        }
    </div>

    <!-- ABOUT TAB -->
    <div id="About" class="tabcontent">
        <div class="featured_section55 animate" data-anim-type="fadeIn" data-anim-delay="100">
            <div class="full-container">


                <div class="container center-block">

                    @* <img src="@Url.Content(Model.Measure_Image)" alt="" class="rimg" style="height:250px" /> *@
                    <img src="@Url.Content(Model.Measure_Image)" alt="" class="center-block" />

                </div>
                <div class="clearfix margin_top1"></div>
                <div class="text-justify">

                    <h4 class="color3 margin_bottom2">About @Model.Title</h4>
                    <p class="bigtfont text-justify overflowCommittes">
                        @Html.Raw(Model.About)
                    </p>
                    <div class="clearfix margin_top3"></div>
                    @if (!string.IsNullOrWhiteSpace(Model.Measures))
                    {

                        <h4 class="color3 margin_bottom2">@Model.Title Measures</h4>

                        <div class="bigtfont text-justify overflowCommittes">
                            @Html.Raw(Model.Measures)
                        </div>
                    }
                </div>
                <!-- end section -->


            </div>
        </div>
    </div>

    <!-- VISION & MISSION -->
    <div id="VisionMission" class="tabcontent">
        <div class="featured_section106" style="background-color:white">
            <div style="padding-left:10px;">

                <div class="margin_top2"></div>
                <h2 class="roboto thin">Vision </h2>
                <div class="hsmline7"></div>

                <br><br>
                @foreach (var obj in Model.Vision)
                {
                    <h4 class="roboto thin text-justify"> @obj</h4>
                }

                <div class="clearfix margin_top2"></div>

                <div class="margin_top2"></div>
                <h2 class="roboto thin">Mission </h2>
                <div class="hsmline7"></div>

                <br><br>
                @foreach (var obj in Model.Mission)
                {
                    <h4 class="roboto thin text-justify"><i class="fa fa-check"></i> @Html.Raw(obj)</h4>
                }

                <div class="margin_top2"></div>

            </div>
        </div>
    </div>

    <!-- OBJECTIVES -->
    <div id="Objectives" class="tabcontent">
        <div class="featured_section106">
            <div class="full-container">

                <div class="margin_top2"></div>
                <h2 class="roboto thin">Objectives </h2>
                <div class="hsmline7"></div>

                <br><br>
                @foreach (var obj in Model.Objectives)
                {
                    <h4 class="roboto thin text-justify"><i class="fa fa-check"></i> @Html.Raw(obj)</h4>
                }

                <div class="margin_top2"></div>

            </div>
        </div>
    </div>

    <!-- Functions -->
    <div id="Functions" class="tabcontent">
        <div class="featured_section106">
            <div class="full-container">
                <div class="margin_top2"></div>
                <h2 class="roboto thin">@Model.Functions.Title</h2>
                <div class="hsmline7"></div>
                <br><br>
                <h4 class="roboto thin text-justify">@Model.Functions.Description</h4>
                <br>
                <img class="rimg" src="@Url.Content(Model.Functions.Image)" alt="Functions" class="img-responsive" />

                <div class="margin_top2"></div>

                <!-- Inform -->
                <h3 class="roboto thin">Inform</h3>
                <div class="hsmline7"></div>
                <br><br>
                @foreach (var item in Model.Functions.FunctionsInform)
                {
                    <h4 class="roboto thin text-justify"><i class="fa fa-check"></i> @Html.Raw(item)</h4>
                }

                <div class="margin_top2"></div>

                <!-- Prepare -->
                <h3 class="roboto thin">Prepare</h3>
                <div class="hsmline7"></div>
                <br><br>
                @foreach (var item in Model.Functions.FunctionsPrepare)
                {
                    <h4 class="roboto thin text-justify"><i class="fa fa-check"></i> @Html.Raw(item)</h4>
                }

                <div class="margin_top2"></div>

                <!-- Organize -->
                <h3 class="roboto thin">Organize</h3>
                <div class="hsmline7"></div>
                <br><br>
                @foreach (var item in Model.Functions.FunctionsOrganize)
                {
                    <h4 class="roboto thin text-justify"><i class="fa fa-check"></i> @Html.Raw(item)</h4>
                }

                <div class="margin_top2"></div>
            </div>
        </div>
    </div>

    <!-- Placement Statistics -->
    @if (Model.Statistics != null && Model.Statistics.Any())
    {
        <div id="Statistics" class="tabcontent">
            <div class="featured_section106">
                <div class="full-container">
                    <div class="margin_top2"></div>
                    <h2 class="roboto thin">Placement Statistics</h2>
                    <div class="hsmline7"></div>
                    <br><br>

                    @foreach (var stat in Model.Statistics)
                    {
                        <div class="department-section">
                            <h3>@stat.Department</h3>
                            <div class="hsmline7"></div>
                            <br><br>
                            @if (stat.Graphs != null && stat.Graphs.Any())
                            {
                                <div class="graph-container">
                                    @foreach (var graph in stat.Graphs)
                                    {
                                        <div class="graph-item" style="margin-bottom: 20px;">
                                            @if (!string.IsNullOrEmpty(graph.Year))
                                            {
                                                <h4><strong>Year:</strong> @graph.Year</h4>
                                                   <div class="hsmline7"></div>
                                                    <br>
                                            }
                                            <img src="@Url.Content(graph.Image)" alt="Placement Graph" style="max-width: 100%; height: auto;" />
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    <!-- Top Recruiters -->
    <div id="TopRecruiters" class="tabcontent">
        <div class="featured_section106">
            <div class="full-container">
                <div class="margin_top2"></div>
                <h2 class="roboto thin">Top Recruiters</h2>
                <div class="hsmline7"></div>
                <br><br>

                @if (Model.TopRecruiters != null && Model.TopRecruiters.Any())
                {
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 80px;">Sr. No</th>
                                <th style="width: 250px;">Name</th>
                                <th>Logo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var recruiter in Model.TopRecruiters)
                            {
                                <tr>
                                    <td>@recruiter.SrNo</td>
                                    <td>@recruiter.Name</td>
                                    <td>
                                        <img src="@Url.Content(recruiter.LogoPath)"
                                             alt="@recruiter.Name Logo"
                                             style="max-height: 60px; object-fit: contain;" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No top recruiters data available.</p>
                }

                <div class="margin_top2"></div>
            </div>
        </div>
    </div> 

    <!-- Placement Activities Calendar -->
    @if (Model.ActivitiesCalendar != null && Model.ActivitiesCalendar.Any())
    {
        <div id="ActivitiesCalendar" class="tabcontent">
            <div class="featured_section106">
                <div class="full-container">
                    <div class="margin_top2"></div>
                    <h2 class="roboto thin">Placement Activities Calendar</h2>
                    <div class="hsmline7"></div>
                    <br><br>

                    <table style="width:100%; border-collapse:collapse; text-align:center;">
                        <thead style="background-color:#2d2d2d; color:white">
                            <tr>
                                <th style="padding:10px; border:1px solid #aaa;">Sr. No.</th>
                                <th style="padding:10px; border:1px solid #aaa;">Activity Name</th>
                                <th style="padding:10px; border:1px solid #aaa;">Period</th>
                                <th style="padding:10px; border:1px solid #aaa;">For Students</th>
                                <th style="padding:10px; border:1px solid #aaa;">Download Reports</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in Model.ActivitiesCalendar)
                            {
                                <tr>
                                    <td style="padding:10px; border:1px solid #aaa;">@count</td>
                                    <td style="padding:10px; border:1px solid #aaa;">@activity.Title</td>
                                    <td style="padding:10px; border:1px solid #aaa;">@activity.EventDate</td>
                                    <td style="padding:10px; border:1px solid #aaa;">@activity.TargetStudents</td>
                                    <td style="padding:10px; border:1px solid #aaa;">
                                                @if (activity.Files != null && activity.Files.Any(f => 
                                                    f.FileType.Equals("PDF", StringComparison.OrdinalIgnoreCase) && 
                                                    !string.IsNullOrWhiteSpace(f.FilePath)))
                                                {
                                                    var pdfFile = activity.Files.First(f => 
                                                        f.FileType.Equals("PDF", StringComparison.OrdinalIgnoreCase));
                                                    <a href="@Url.Content(pdfFile.FilePath)" download target="_blank" style="color:deepskyblue; text-decoration: none;">
                                                        Click Here
                                                    </a>
                                                }
                                            </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
  
    @if (Model.StudentPolicy != null)
    {
        <div id="StudentPlacementPolicy" class="tabcontent">
            <div class="featured_section106">
                <div class="full-container">
                    <div class="margin_top2"></div>
                    <!-- General Policy -->
                    @if (Model.StudentPolicy.PolicyText?.Any() == true)
                    {
                        <h2 class="roboto thin">Placement Policy for students</h2> 
                        <div class="hsmline7"></div>
                        <br>
                        <ul>
                            @foreach (var item in Model.StudentPolicy.PolicyText)
                            {
                                <h4 class="roboto thin text-justify"><i class="fa fa-check text-success"></i> @item</h4>
                            }
                        </ul>
                         <br>
                    }

                    <!-- Internship Instructions -->
                    @if (Model.StudentPolicy.InternshipOffers?.Any() == true)
                    {
                        <h2 class="roboto thin">Internship Offers
                        </h2>
                        <div class="hsmline7"></div>
                        <br>
                        <ul>
                            @foreach (var item in Model.StudentPolicy.InternshipOffers)
                            {
                                <h4 class="roboto thin text-justify"><i class="fa fa-check text-success"></i> @item</h4>
                            }
                        </ul>
                         <br>
                    }

                    <!-- Dress Code -->
                    @if (Model.StudentPolicy.DressCode?.Any() == true)
                    {
                        <h2 class="roboto thin">Dress Code</h2>
                        <div class="hsmline7"></div>
                        <br>
                        <ul>
                            @foreach (var item in Model.StudentPolicy.DressCode)
                            {
                                <h4 class="roboto thin text-justify"><i class="fa fa-check text-success"></i> @item</h4>
                            }
                        </ul>
                         <br>
                    }

                    <!-- Offer Letter Policy -->
                    @if (Model.StudentPolicy.OfferLetterPolicy?.Any() == true)
                    {
                        <h2 class="roboto thin">Offer Letter Policy</h2> <div class="hsmline7"></div>
                        <br>
                        <ul>
                            @foreach (var item in Model.StudentPolicy.OfferLetterPolicy)
                            {
                                <h4 class="roboto thin text-justify"><i class="fa fa-check text-success"></i> @item</h4>
                            }
                        </ul>
                        <br>
                    }

                    <!-- Download Templates -->
                    @if (Model.StudentPolicy.Downloads?.Any() == true)
                    {
                        <h2 class="roboto thin">Download Templates</h2><div class="hsmline7"></div>    
                        <br><br>
                        <table class="table table-bordered table-striped table-dark mt-2">
                            <thead>
                                <tr>
                                    <th style="width: 15%">Sr No</th>
                                    <th style="width: 65%">Title</th>
                                    <th style="width: 20%">Download</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int srNo = 1;
                                }
                                @foreach (var item in Model.StudentPolicy.Downloads)
                                {
                                    var extension = System.IO.Path.GetExtension(item.Path)?.ToLower();
                                    string fileIcon = "";
                                    if (extension == ".pdf")
                                        fileIcon = "";                  
                                    <tr>
                                        <td>@srNo</td>
                                        <td>@item.Name</td>
                                        <td class="text-center">
                                            <a href="@Url.Content(item.Path)" download class="btn btn-sm btn-primary">
                                                        Download
                                            </a>
                                        </td>
                                    </tr>
                                    srNo++;
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    }
    <!--For Recruiters-->
    <div id="RecruiterInfo" class="tabcontent">
        <div class="featured_section106">
            <div class="full-container">

                <div class="margin_top2"></div>
                <h2 class="roboto thin">For Recruiters / Industry HR</h2>
                <div class="hsmline7"></div>
