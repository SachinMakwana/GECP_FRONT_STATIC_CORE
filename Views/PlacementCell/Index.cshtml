                            }
                        </ul>
                    }

                    <!-- Offer Letter Policy -->
                    @if (Model.StudentPolicy.OfferLetterPolicy?.Any() == true)
                    {
                        <h4 class="text-primary">Offer Letter Policy</h4>
                        <ul>
                            @foreach (var item in Model.StudentPolicy.OfferLetterPolicy)
                            {
                                <li><i class="fa fa-check text-success"></i> @item</li>
                            }
                        </ul>
                    }
                    @if (Model.StudentPolicy.Downloads?.Any() == true)
                    {
                        <h4 class="fw-bold text-white">Download Templates</h4>
                        <ul class="list-unstyled ms-3">
                            @foreach (var item in Model.StudentPolicy.Downloads)
                            {
                                <li class="mb-2">
