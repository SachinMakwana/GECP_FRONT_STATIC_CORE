                        <ul>
                            @foreach (var item in Model.StudentPolicy.InternshipInstructions)
                            {
                                <li><i class="fa fa-check text-success"></i> @item</li>
                            }
                        </ul>
                    }

                    <!-- Dress Code -->
                    @if (Model.StudentPolicy.DressCode?.Any() == true)
                    {
                        <h4 class="text-primary">Dress Code</h4>
                        <ul>
                            @foreach (var item in Model.StudentPolicy.DressCode)
                            {
