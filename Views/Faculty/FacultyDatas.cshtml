@model GECP_Front_End_Static.Models.FacultyDetailsVM
@{
    Layout = null;
}

<div class="">
    <div class="">
        <!-- Faculty Image -->
        <div class="col-md-4 text-center">
            <img src="@Url.Content("~/"+Model.image)" alt="Faculty Image" class="img-fluid rounded-circle shadow">
        </div>

        <!-- Faculty Basic Info -->
        <div class="col-md-8">
            <h1 class="display-4 text-primary">@Model.PersonalDetails.Name</h1>
            <hr class="mb-3" />
            <ul class="list-unstyled">
                <li>
                    <strong>Designation:</strong> <span class="text-secondary">@Model.PersonalDetails.Designation</span>
                </li>
                <li>
                    <strong>Qualification:</strong> <span class="text-secondary">@Model.Qualification</span>
                </li>
                <li>
                    <strong>Experience:</strong> <span class="text-secondary">@Model.YearsOfExperience years</span>
                </li>
                <li>
                    <strong>Area of Interest:</strong> <span class="text-secondary">@Model.Area_of_Interest</span>
                </li>
                <li>
                    <strong>Email:</strong> <span class="text-secondary">@Model.PersonalDetails.Email</span>
                </li>
            </ul>
        </div>
    </div>
    <div class="clearfix"></div>

    <!-- Educational Qualifications -->
    <section class="boxdetail">
        <h3 class="boxtitle">Educational Qualifications</h3>
        <div class="table-responsive boxinfo">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Degree</th>
                        <th>University</th>
                        <th>Year</th>
                        <th>Specialization</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var qualification in Model.EducationalQualifications)
                    {
                        <tr>
                            <td>@qualification.Degree</td>
                            <td>@qualification.University</td>
                            <td>@qualification.Year</td>
                            <td>@qualification.Specialization</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <!-- Professional Experience -->
    <section class="boxdetail">
        <h3 class="boxtitle">Professional Experience</h3>
        <div class="table-responsive boxinfo">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Position</th>
                        <th>Organization</th>
                        <th>Duration</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var experience in Model.ProfessionalExperiences)
                    {
                        <tr>
                            <td>@experience.Position</td>
                            <td>@experience.Organization</td>
                            <td>@experience.Duration</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <!-- Training and Workshops -->
    <section class="boxdetail">
        <h3 class="text-secondary boxtitle">Training and Workshops</h3>
        <div class="table-responsive boxinfo">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Title</th>
                        <th>Organized By</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var workshop in Model.TrainingAndWorkshops)
                    {
                        <tr>
                            <td>@workshop.Title</td>
                            <td>@workshop.OrganizedBy</td>
                            <td>@workshop.Date</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <!-- Publications -->
    <section class="boxdetail">
        <h3 class="text-secondary boxtitle">Publications</h3>
        <div class="table-responsive boxinfo">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Sr. No.</th>
                        <th>Title</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var publication in Model.Publications)
                    {
                        <tr>
                            <td>@publication.SrNo</td>
                            <td>@publication.Title</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

