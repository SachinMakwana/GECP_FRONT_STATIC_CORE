@model GECP_Front_End_Static.Models.FacultyDetailsVM
@{
	//Layout = Context.Request.Query["isPartial"] == "true" ? "~/Views/Shared/_MinimalLayout.cshtml" : "~/Views/Shared/_Layout.cshtml";
	Layout = null;
	int count = 1;
}
<style>
	.table > thead > tr.success > th {
		background-color: #5076bb !important;
		color: white;
		text-align: justify;
	}

	.title22 {
		color: black;
	}
</style>
<div class="box">
	<div class="">
		<!-- Faculty Image -->
		<div class="one_fourth text-center">
			<img src="@Url.Content("~/"+Model.image)" alt="Faculty Image" class="img-fluid rounded-circle shadow">
		</div>

		<!-- Faculty Basic Info -->
		<div class="three_fourth last">
			<h1 class="display-4 text-primary">@Model.PersonalDetails.Name</h1>
			<hr class="mb-3" />
			<ul class="list-unstyled">
				<li>
					<strong>Designation:</strong> <span class="text-secondary">@Model.PersonalDetails.Designation</span>
				</li>
				@* <li>
					<strong>Qualification:</strong> <span class="text-secondary">@Model.Qualification</span>
				</li>
				<li>
					<strong>Experience:</strong> <span class="text-secondary">@Model.YearsOfExperience years</span>
				</li> *@
				<li>
					<strong>Area of Interest:</strong> <span class="text-secondary">@Model.Area_of_Interest</span>
				</li>
				<li>
					<strong>Email:</strong> <span class="text-secondary">@Model.PersonalDetails.Email</span>
				</li>
				@if (!string.IsNullOrWhiteSpace(Model.Website))
				{
					<li>
						<strong>Website/Blogspot:</strong> <a href="@Model.Website" class="block" target="_blank">view</a>
					</li>
				}
			</ul>
		</div>
	</div>
	<div class="clearfix"></div>

	<!-- Educational Qualifications -->
	<section class="boxdetail">
		<h3 class="boxtitle">Educational Qualifications</h3>
		<div class="table-responsive boxinfo">
			<table class="table table-striped table-hover  table-condensed shadow-sm">
				@if (Model.EducationalQualifications.Count() > 0)
				{
					<thead class="bg-primary text-white">
						<tr class="success">
							<th style="width:10% !important">Sr No</th>
							<th>Degree</th>

							<th>Year</th>
							<th>Specialization</th>
						</tr>
					</thead>
					<tbody>

						@foreach (var qualification in Model.EducationalQualifications)
						{
							<tr>
								<td>@count</td>
								<td>@qualification.Degree</td>

								<td>@qualification.Year</td>
								<td>@qualification.Specialization</td>
							</tr>
							count++;
						}

					</tbody>
				}
				else
				{
					<tr>
						<td>
							<div class=" featured_section13">
								<h1 class="title22 animate fadeIn" data-anim-type="fadeIn" data-anim-delay="100" style="color:black !important;">
									NO RECORDS AVAILABLE
								</h1>
							</div>
						</td>
					</tr>
				}
			</table>
		</div>
	</section>

	<!-- Professional Experience -->
	<section class="boxdetail">
		<h3 class="boxtitle">Professional Experience</h3>
		<div class="table-responsive boxinfo">
			<table class="table table-striped table-hover table-condensed shadow-sm">
				@if (Model.ProfessionalExperiences.Count() > 0)
				{
					<thead class="bg-primary text-white">
						<tr class="success">
							<th style="width:10% !important">Sr No</th>
							<th>Position</th>
							<th>Organization</th>
							<th>Duration</th>
						</tr>
					</thead>
					<tbody>
						@{
							count = 1;
						}

						@foreach (var experience in Model.ProfessionalExperiences)
						{
							<tr>
								<td>@count</td>
								<td>@experience.Position</td>
								<td>@experience.Organization</td>
								<td>@experience.Duration</td>
							</tr>
							count++;
						}

					</tbody>
				}
				else
				{
					<tr>
						<td>
							<div class=" featured_section13">
								<h1 class="title22 animate fadeIn" data-anim-type="fadeIn" data-anim-delay="100" style="color:black !important">
									NO RECORDS AVAILABLE
								</h1>
							</div>
						</td>
					</tr>
				}
			</table>
		</div>
	</section>

	<!-- Training and Workshops -->
	<section class="boxdetail">
		<h3 class="text-secondary boxtitle">Training and Workshops</h3>
		<div class="table-responsive boxinfo">
			<table class="table table-striped table-hover table-condensed shadow-sm">
				@if (Model.TrainingAndWorkshops.Count() > 0)
				{
					<thead class="bg-primary text-white">
						<tr class="success">
							<th style="width:10% !important">Sr No</th>
							<th>Title</th>
							<th>Organized By</th>
							<th>Date</th>
						</tr>
					</thead>
					<tbody>
						@{
							count = 1;
						}

						@foreach (var workshop in Model.TrainingAndWorkshops)
						{
							<tr>
								<td>@count</td>
								<td>@workshop.Title</td>
								<td>@workshop.OrganizedBy</td>
								<td>@workshop.Date</td>
							</tr>
							count++;
						}

					</tbody>
				}
				else
				{
					<tr>
						<td>
							<div class=" featured_section13">
								<h1 class="title22 animate fadeIn" data-anim-type="fadeIn" data-anim-delay="100" style="color:black !important;">
									NO RECORDS AVAILABLE
								</h1>
							</div>
						</td>
					</tr>
				}
			</table>
		</div>
	</section>

	<!-- Publications -->
	<section class="boxdetail">
		<h3 class="text-secondary boxtitle">Publications</h3>
		<div class="table-responsive boxinfo">
			<table class="table table-striped table-hover table-condensed shadow-sm">
				@if (Model.Publications.Count() > 0)
				{
					<thead class="bg-primary text-white">
						<tr class="success">
							<th style="width:10% !important">Sr. No.</th>
							<th>Title</th>
						</tr>
					</thead>
					<tbody>

						@foreach (var publication in Model.Publications)
						{
							<tr>
								<td>@publication.SrNo</td>
								<td>@publication.Title</td>
							</tr>
						}
					</tbody>
				}
				else
				{
					<tr>
						<td>
							<div class=" featured_section13">
								<h1 class="title22 animate fadeIn" data-anim-type="fadeIn" data-anim-delay="100" style="color:black !important;">
									NO RECORDS AVAILABLE
								</h1>
							</div>
						</td>
					</tr>
				}
			</table>
		</div>
	</section>
</div>
