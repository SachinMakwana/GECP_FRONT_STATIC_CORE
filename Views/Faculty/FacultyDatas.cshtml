<div>
    <h1>Faculty Details</h1>

    <!-- Personal Details -->
    <section>
        <h2>Personal Details</h2>
        <p><strong>Name:</strong> @Model.PersonalDetails.Name</p>
        <p><strong>Designation:</strong> @Model.PersonalDetails.Designation</p>
        <p><strong>Department:</strong> @Model.PersonalDetails.Department</p>
        <p><strong>Contact:</strong> @Model.PersonalDetails.Contact</p>
        <p><strong>Email:</strong> @Model.PersonalDetails.Email</p>
    </section>

    <!-- Educational Qualifications -->
    <section>
        <h2>Educational Qualifications</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Degree</th>
                    <th>University</th>
                    <th>Year</th>
                    <th>Specialization</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var qualification in Model.EducationalQualifications)
                {
                    <tr>
                        <td>@qualification.Degree</td>
                        <td>@qualification.University</td>
                        <td>@qualification.Year</td>
                        <td>@qualification.Specialization</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <!-- Professional Experience -->
    <section>
        <h2>Professional Experience</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Position</th>
                    <th>Organization</th>
                    <th>Duration</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var experience in Model.ProfessionalExperiences)
                {
                    <tr>
                        <td>@experience.Position</td>
                        <td>@experience.Organization</td>
                        <td>@experience.Duration</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <!-- Training and Workshops -->
    <section>
        <h2>Training and Workshops</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Organized By</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var workshop in Model.TrainingAndWorkshops)
                {
                    <tr>
                        <td>@workshop.Title</td>
                        <td>@workshop.OrganizedBy</td>
                        <td>@workshop.Date</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <!-- Publications -->
    <section>
        <h2>Publications</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var publication in Model.Publications)
                {
                    <tr>
                        <td>@publication.SrNo</td>
                        <td>@publication.Title</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>
