@model GECP_Front_End_Static.Models.FacultyDetailsVM
@{
    Layout = Context.Request.Query["isPartial"] == "true" ? "~/Views/Shared/_MinimalLayout.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row align-items-center">
        <!-- Faculty Image -->
        <div class="col-md-4 text-center">
            <img src="@Url.Content("~/"+Model.image)" alt="Faculty Image" class="img-fluid rounded-circle shadow">
        </div>

        <!-- Faculty Basic Info -->
        <div class="col-md-8">
            <h1 class="display-4 text-primary">@Model.PersonalDetails.Name</h1>
            <hr class="mb-3" />
            <ul class="list-unstyled">
                <li>
                    <strong>Designation:</strong> <span class="text-secondary">@Model.PersonalDetails.Designation</span>
                </li>
                <li>
                    <strong>Qualification:</strong> <span class="text-secondary">@Model.Qualification</span>
                </li>
                <li>
                    <strong>Experience:</strong> <span class="text-secondary">@Model.YearsOfExperience years</span>
                </li>
                <li>
                    <strong>Area of Interest:</strong> <span class="text-secondary">@Model.Area_of_Interest</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="mt-5">
        <h2 class="text-center text-uppercase text-primary">Faculty Details</h2>
        <hr class="mb-4" />
    </div>

    <!-- Personal Details -->
    <section class="mb-5">
        <h3 class="text-secondary">Personal Details</h3>
        <div class="card shadow p-3">
            <p><strong>Name:</strong> @Model.PersonalDetails.Name</p>
            <p><strong>Designation:</strong> @Model.PersonalDetails.Designation</p>
            <p><strong>Department:</strong> @Model.PersonalDetails.Department</p>
            <p><strong>Contact:</strong> @Model.PersonalDetails.Contact</p>
            <p><strong>Email:</strong> @Model.PersonalDetails.Email</p>
        </div>
    </section>

    <!-- Educational Qualifications -->
    <section class="mb-5">
        <h3 class="text-secondary">Educational Qualifications</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Degree</th>
                        <th>University</th>
                        <th>Year</th>
                        <th>Specialization</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var qualification in Model.EducationalQualifications)
                    {
                        <tr>
                            <td>@qualification.Degree</td>
                            <td>@qualification.University</td>
                            <td>@qualification.Year</td>
                            <td>@qualification.Specialization</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <!-- Professional Experience -->
    <section class="mb-5">
        <h3 class="text-secondary">Professional Experience</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Position</th>
                        <th>Organization</th>
                        <th>Duration</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var experience in Model.ProfessionalExperiences)
                    {
                        <tr>
                            <td>@experience.Position</td>
                            <td>@experience.Organization</td>
                            <td>@experience.Duration</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <!-- Training and Workshops -->
    <section class="mb-5">
        <h3 class="text-secondary">Training and Workshops</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Title</th>
                        <th>Organized By</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var workshop in Model.TrainingAndWorkshops)
                    {
                        <tr>
                            <td>@workshop.Title</td>
                            <td>@workshop.OrganizedBy</td>
                            <td>@workshop.Date</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <!-- Publications -->
    <section class="mb-5">
        <h3 class="text-secondary">Publications</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Sr. No.</th>
                        <th>Title</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var publication in Model.Publications)
                    {
                        <tr>
                            <td>@publication.SrNo</td>
                            <td>@publication.Title</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

