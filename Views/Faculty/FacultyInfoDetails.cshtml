                <li><a href="#faculty-@head" target="_self">@item</a></li>
                head++;
            }
        </ul>

        <div class="tabs-content3 two">
            @foreach (var item in Model.tabs.Values)
            {
                <div id="faculty-@value" class="tabs-panel3">

                    @Html.Raw(item)

                </div>
                value++;
            }
            <!-- end tab 1 -->

        </div>
        <!-- end all tabs -->
    </div>

</div>
}

