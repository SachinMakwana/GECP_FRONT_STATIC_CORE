@model DepartmentVM
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = Model.Title;
}



<div class="clearfix"></div>


<div class="page_title3 @Model.TitleImageCSSClass">
	<div class="container">

		<h1>
			@Model.Title<em>Government Engineering College</em>
			<div class="line"></div>
		</h1>

	</div>
</div>
<div class="clearfix"></div>


<div class="content_fullwidth">

	<div class="container">

		<div class="one_half">

			<div id="owl-demo2" class="owl-carousel">
				@foreach (var item in Model.About_Images)
				{
					<div><img src="@Url.Content(item)" alt="" class="rimg"></div>
				}
			</div>

		</div>
		<!-- end section -->

		<div class="one_half last text-justify">

			<div class="stcode_title5">
				<h3 class="nmb"><strong>@Model.Title</strong></h3>
			</div>

			<p class="text-justify">
				@Model.About
			</p>

			<div class="clearfix marb12"></div>

		</div>
		<!-- end section -->

	</div>
	<!-- end all sections -->
	@if (Model.showIntake)
	{
		<div class="margin_top2"> </div>

		<div class="parallax_section12">
			<div class="container">

				<div class="counters7 animate" data-anim-type="fadeIn" data-anim-delay="300">

					<div class="one_fourth">
						<i class="fa fa-user"></i> <span id="target21">@Model.Intake</span>
						<h4>Total Intake</h4>
					</div>
					<!-- end section -->

					<div class="one_fourth">
						<i class="fa fa-users"></i> <span id="target22">@Model.FacultyList.Count()</span>
						<h4>Faculties Member</h4>
					</div>
					<!-- end section -->
					@*  <div class="one_fifth">
                <i class="fa fa-book"></i> <span id="target23">0</span>
                <h4>Total Subjects</h4>
                </div> *@
					<!-- end section -->

					<div class="one_fourth">
						<i class="fa fa-paper-plane"></i> <span id="target24">@Model.AnnualPlacementCount</span>
						<h4>Annual Placement</h4>
					</div>
					<!-- end section -->

					<div class="one_fourth last">
						<i class="fa fa-building"></i> <span id="target25">@Model.LabWorkshop</span>
						<h4>Labs And Workshops</h4>
					</div>
					<!-- end section -->


				</div>


			</div>
		</div>
		<!-- end parallax section 12 -->
	}
	<div class="featured_section14">
		<div class="container">

			<div class="one_half animate" data-anim-type="fadeInLeft" data-anim-delay="300">

				<img src="@Url.Content("~/images/vision.png")" alt="" />
				<br /><br />
				<h3 class="white">Vision</h3>

				<ul class="text-justify">
					@foreach (var item in Model.Vision)
					{
						<li><i class="fa fa fa-hand-o-right" aria-hidden="true"></i> @item</li>
					}
				</ul>
				<br /><br />


			</div>
			<!-- end section -->

			<div class="one_half last animate" data-anim-type="fadeInRight" data-anim-delay="300">

				<img src="@Url.Content("~/images/mission.png")" alt="" />
				<br /><br />
				<h3 class="white">Mission</h3>

				<ul class="text-justify">
					@foreach (var item in Model.Mission)
					{
						<li><i class="fa fa fa-hand-o-right" aria-hidden="true"></i> @item</li>
					}
				</ul>
				<br /><br />


			</div>
			<!-- end section -->

		</div>
	</div>
	<!-- end featured section 14 -->

	<div class="clearfix"></div>


	<div class="featured_section3 two">
		<div class="container">

			<div class="onecol_forty"><img src="@Url.Content(Model.HOD_Pic)" alt="" class="rimg animate" data-anim-type="fadeInLeft" data-anim-delay="300" /></div>
			<div class="onecol_sixty last animate" data-anim-type="fadeInRight" data-anim-delay="300">

				<strong class="color3">HOD MESSAGE</strong>
				<br />
				<p class="bigtfont text-justify">
					@Model.HODMessage
					<br />
					- @Model.HODName
				</p>
			</div>
		</div>
	</div>
	<div class="margin_top6"></div>

	<div class="clearfix"></div>


	<div class="container">

		<ul class="tabs3">
			<li><a href="#FacultyInfo" target="_self">FACULTY</a></li>
			<li><a href="#LabsInfo" target="_self">LABS</a></li>
			<li><a href="#example-3-tab-3" target="_self">PEOs</a></li>
			<li><a href="#example-3-tab-4" target="_self">PSOs</a></li>
		</ul>

		<div class="tabs-content3 two">
			<div id="FacultyInfo" class="tabs-panel3">
				@foreach (var data in Model.FacultyList)
				{
					<div class="one_half @((Model.FacultyList.IndexOf(data) + 1) % 2 == 0 ? "last" : "") animate" data-anim-type="fadeIn" data-anim-delay="300">
						<div class="faculties_img_div">
							<img src="@Url.Content("~/" + data.image)" alt="@data.Name" />
								<a href="javascript:void(0)" onclick="loadFacultyinfo('@Url.Action("FacultyDatas", "faculty", new { id = data.ID })')" class="four faculty_info_link">
									<i class="fas fa-external-link-square-alt"></i>
								</a>
						</div>
						<div class="b-portfolio_info col-sm-6">
							<div class="b-portfolio_info_title f-primary-b f-portfolio_info_title">
								<a href="#">@data.Name</a>
							</div>
							<hr>
							<div class="b-portfolio_info_description f-portfolio_info_description">
								<div class="b-information-box f-information-box f-primary-b">
									<ul>
										<li>
											<strong class="f-information-box__name b-information-box__name">Designation</strong>
											<i class="b-dotted f-dotted">:</i>
											<span class="f-information_data">@data.Designation</span>
										</li>
										<li>
											<strong class="f-information-box__name b-information-box__name">Qualification</strong>
											<i class="b-dotted f-dotted">:</i>
											<span class="f-information_data">@data.Qualification</span>
										</li>
										<li>
											<strong class="f-information-box__name b-information-box__name">Experience</strong>
											<i class="b-dotted f-dotted">:</i>
											<span class="f-information_data">@data.YearsOfExperience Years</span>
										</li>
										<li>
											<strong class="f-information-box__name b-information-box__name">Area Of Interest</strong>
											<i class="b-dotted f-dotted">:</i>
											<span class="f-information_data">@data.Area_of_Interest</span>
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
					@if ((Model.FacultyList.IndexOf(data) + 1) % 2 == 0)
					{
						<div class="clearfix margin_top5"></div>
					}
				}
			</div>



			<div id="LabsInfo" class="tabs-panel3">
				<div class="container">
					
					@if (Model.Lab != null && Model.Lab.Any())
					{
						foreach (var lab in Model.Lab)
						{
							<div class="lab-section">
								<img src="@Url.Content(lab.Lab_Image)" alt="@lab.Lab_Name" />
								<div class="lab-content">
									<h2>@lab.Lab_Name</h2>
									<p>@lab.Lab_Details</p>
								</div>
							</div>
						}
					}
					else
					{
						<h2>No labs available for this department.</h2>
					}
				</div>
			</div>



			<div id="example-3-tab-3" class="tabs-panel3" style="display: flex; align-items: flex-start; gap: 20px; padding: 20px;">
				<img src="images\site-img50.jpg" alt="" class="rimg">
				<span style="font-weight: 700; text-decoration: underline;">
					PROGRAM EDUCATIONAL OUTCOMES (PSOs)
				</span>
				<p style="margin: 10px 0; padding-left: 20px; font-size: 16px; line-height: 1.8; color: #555;">
					@Model.PEOs
				</p>
			</div>


			<div id="example-3-tab-4" class="tabs-panel3">
				<img src="images\site-img50.jpg" alt="" class="rimg">
				<span style="font-weight: 700; text-decoration: underline;">
					PROGRAM SPECIFIC OUTCOMES (PSOs)
				</span>
				<p style="margin: 10px 0; padding-left: 20px; font-size: 16px; line-height: 1.8; color: #555;">
					@Model.PSOs
				</p>
			</div>

		</div>
	</div>
	<div class="clearfix margin_top2"></div>
	<div class="featured_section38">
		<div class="container">
			@Html.Raw(Model.Tagline)
		</div>
	</div>

	<a id="lnkPopup" href="#animatedModal" class="popup-trigger hidden" data-target="#popup"></a>
	<div id="popup" class="popup">
		<div id="pdfreader" style="height:600px">
		</div>
		<span class="popup-btn-close">&times;</span>
	</div>
	@section scripts {

		@*<script type="text/javascript" src="@Url.Content("~/js/cubeportfolio/jquery.cubeportfolio.min.js")"></script>*@
		<script src="@Url.Content("~/js/tabs/assets/js/responsive-tabs.min.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/js/loopslider/jquery.loopslider.js")"></script>
		<script>
			$(function () {
				$('#slider').loopSlider({
					autoMove: true,
					mouseOnStop: true,
					turn: 9000,
					motion: 'swing',
					delay: 500,
					width: 750,
					height: 400,
					marginLR: 10,
					viewSize: 100,
					viewOverflow: 'visible',
					navPositionBottom: 30,
					navibotton: true,
					navbtnImage: ''
				});
			});
		</script>
		<script>
			(function ($) {
				"use strict";
				var target21 = $("#target21").text();
				var target22 = $("#target22").text();
				var target24 = $("#target24").text();
				var target25 = $("#target25").text();

				$('#target21').animateNumber({
					number: target21,

					numberStep: function (now, tween) {
						var floored_number = Math.floor(now),
							target = $(tween.elem);

						target.text(floored_number);
					}
				},
					5000
				)

				$('#target22').animateNumber({
					number: target22,

					numberStep: function (now, tween) {
						var floored_number = Math.floor(now),
							target = $(tween.elem);

						target.text(floored_number);
					}
				},
					5000
				)

				$('#target23').animateNumber({
					number: 45,

					numberStep: function (now, tween) {
						var floored_number = Math.floor(now),
							target = $(tween.elem);

						target.text(floored_number);
					}
				},
					5000
				)

				$('#target24').animateNumber({
					number: target24,

					numberStep: function (now, tween) {
						var floored_number = Math.floor(now),
							target = $(tween.elem);

						target.text(floored_number);
					}
				},
					5000
				)

				$('#target25').animateNumber({
					number: target25,

					numberStep: function (now, tween) {
						var floored_number = Math.floor(now),
							target = $(tween.elem);

						target.text(floored_number);
					}
				},
					5000
				)
			})(jQuery);
		</script>
		<script>
			function loadFacultyinfo(url) {
				if (url !== '') {
						$("#pdfreader").load(url);
						$("#lnkPopup").click();
				}
			}
		</script>

		<script>
			function popupOpenClose(popup) {

			/* Add div inside popup for layout if one doesn't exist */
				if ($(".wrapper", popup).length == 0) {
					$(popup).wrapInner("<div class='wrapper'></div>");
				}
			/* Open popup */
				$(popup).show();
			/* Close popup if user clicks on background */
				$(popup).click(function (e) {
					if (e.target == this) {
						if ($(popup).is(':visible')) {
							$(popup).hide();
						}
					}
				});
			/* Close popup and remove errors if user clicks on cancel or close buttons */
				$(popup).find(".popup-btn-close").on("click", function () {
					if ($(".formElementError").is(':visible')) {
						$(".formElementError").remove();
					}
					$(popup).hide();
				});
			}

			$(document).ready(function () {
				$(".popup-trigger").on("click", function () {
					var target = $(this).data('target');
					popupOpenClose($(target));
				});
			});
		</script>

	}

