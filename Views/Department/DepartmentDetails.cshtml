        <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Get all tabs and content panels
            const tabs = document.querySelectorAll(".tabs3 li a");
            const panels = document.querySelectorAll(".tabs-panel3");

            // Add click event listener to each tab
            tabs.forEach((tab) => {
                tab.addEventListener("click", (e) => {
                    e.preventDefault(); // Prevent default anchor behavior

                    // Remove "active" class from all tabs and panels
                    tabs.forEach((t) => t.parentNode.classList.remove("active"));
                    panels.forEach((panel) => panel.classList.remove("active"));

                    // Add "active" class to the clicked tab and its corresponding panel
                    const targetId = tab.getAttribute("href").substring(1);
                    tab.parentNode.classList.add("active");
                    document.getElementById(targetId).classList.add("active");
                });
            });

            // Activate the first tab by default
            tabs[0].parentNode.classList.add("active");
            panels[0].classList.add("active");
        });

        </script>
        


    }

