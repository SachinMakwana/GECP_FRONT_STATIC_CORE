    <script>
        (function ($) {
            "use strict";
            var target21 = $("#target21").text();
            var target22 = $("#target22").text();
            var target24 = $("#target24").text();
            var target25 = $("#target25").text();

            $('#target21').animateNumber({
                number: target21,

                numberStep: function (now, tween) {
                    var floored_number = Math.floor(now),
                        target = $(tween.elem);

                    target.text(floored_number);
                }
            },
                5000
            )

