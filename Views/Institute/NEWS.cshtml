@model IList<NEWSModel>
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "NEWS";
	int count = 1;
}
<div class="clearfix"></div>


<div class="page_title3 " style="background: #999 url('') no-repeat center top;">
	<div class="container">

		<h1>
			NEWS <em>Government Engineering College</em>
			<div class="line"></div>
		</h1>

	</div>
</div>
<div class="clearfix"></div>
<div class="content_fullwidth less2">
	<div class="container">

		<table class="table table-responsive table-bordered table-striped">
			<thead>
				<tr>
					<td>Sr No</td>
					<td>Title</td>
					<td>Date</td>
					<td>View</td>
				</tr>
			</thead>
			<tbody>

				@foreach (var item in Model)
				{
					<tr>
						<td>@count</td>
						<td>@item.Title</td>
						<td>@item.date</td>
						<td><a href="@Url.Action("NEWSDetail","Institute",new{@id=item.ID})"><i class="fa fa-eye"></i></a></td>
					</tr>
					count++;

				}

			</tbody>
		</table>
	</div>
</div>
