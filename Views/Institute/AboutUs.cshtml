@model AboutUsVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "About Us";
}
<div class="clearfix"></div>

<div class="page_title3 engg_title">
    <div class="container">
        <h1>
            @Model.Title
            <div class="line"></div>
        </h1>
    </div>
</div>
<!-- end page title -->


<div class="clearfix margin_top2"></div>



<div class="content_fullwidth">

    <div class="full-container">

        <div class="one_half">

            <div id="owl-demo2" class="owl-carousel">
                @foreach (var imagePath in Model.ImagePaths)
                {
                    <div><img src="@Url.Content(imagePath)" alt="" class="rimg"></div>
                }
            </div>

        </div>
        <!-- end section -->

        <div class="one_half last text-justify">

            <div class="stcode_title5">
                <h3 class="nmb"><strong>History of GECP</strong></h3>
            </div>

            @*<h5 class="gray">Will cover many web sites still in their infancy various versions have evo packages over the years.</h5>*@

            <p>@Html.Raw(Model.History)</p>

            <div class="clearfix marb12"></div>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="text-align:left;">Program</th>
                        <th style="text-align:center;">Present Intake</th>
                        <th style="text-align:center;">Course Code as per (GTU)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var program in Model.Programs)
                    {
                        <tr>
                            <td align="left">@program.ProgramName</td>
                            <td align="center">@program.Intake</td>
                            <td align="center">@program.CourseCode</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- end section -->

    </div>
</div>
<!-- end all sections -->
